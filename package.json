{
  "name": "my-dash",
  "version": "1.1.0",
  "license": "MIT",
  "scripts": {
    "setup": "yarn install && yarn --cwd api/ install && yarn --cwd ui/ install",
    "start": "concurrently \"yarn start:api\" \"yarn start:ui\"",
    "start:api": "yarn --cwd api/ start",
    "start:ui": "yarn --cwd ui/ start"
  },
  "dependencies": {
    "concurrently": "^4.1.0"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
